{
  "name": "sportspoll",
  "version": "1.0.0",
  "description": "A simple app for voting your favourite team",
  "main": "app.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "USER_MICROSERVICE_URL=https://sports-poll-users.herokuapp.com/ SEQUELIZE_CONNECT=sequelize-sqlite.yaml babel-node app.js",
    "server": "cross-env DEBUG=sportspoll:* USER_MICROSERVICE_URL=http://localhost:3030 SEQUELIZE_CONNECT=sequelize-sqlite.yaml nodemon --exec babel-node app.js",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "config": "^3.2.4",
    "cors": "^2.8.5",
    "csrf": "^3.1.0",
    "debug": "^4.1.1",
    "express": "^4.17.1",
    "express-validator": "^6.3.0",
    "fs-extra": "^8.1.0",
    "gravatar": "^1.8.0",
    "js-yaml": "^3.13.1",
    "jsonwebtoken": "^8.5.1",
    "md5": "^2.2.1",
    "moment": "^2.29.2",
    "morgan": "^1.9.1",
    "request": "^2.88.0",
    "rotating-file-stream": "^2.0.0",
    "sequelize": "^5.21.2",
    "serve-favicon": "^2.5.0",
    "sqlite3": "^4.1.0",
    "superagent": "^5.1.1",
    "uuid": "^3.3.3"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-stage-2": "^6.24.1",
    "concurrently": "^5.0.0",
    "cross-env": "^6.0.3",
    "dotenv": "^8.2.0",
    "nodemon": "^2.0.1"
  }
}
